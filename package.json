{
  "name": "Desktop-Dashboard",
  "productName": "Crow",
  "version": "1.0.0",
  "description": "A desktop dashboard for all your needs",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "watch": "webpack --config webpack.config.js --watch",
    "build": "electron-builder"
  },

  "build": {
    "appId": "Crow",
    "win": {
      "target": ["nsis"],
      "icon": "crow-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "crow-icon.ico",
      "uninstallerIcon": "crow-icon.ico",
      "uninstallDisplayName": "Crow",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Crow",
      "allowToChangeInstallationDirectory": true
    }
      },
  "author": {
    "name": "Dylan Yong / David Peguero",
    "email": "dyong1997@gmail.com"
  },
  "dependencies": {
    "@fontsource/poppins": "^5.0.3",
    "@reduxjs/toolkit": "^1.9.5",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.0",
    "date-fns": "^2.30.0",
    "deep-equal": "^2.2.1",
    "electron": "^24.3.1",
    "electron-prompt": "^1.7.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.12.17",
    "googleapis": "^120.0.0",
    "js-base64": "^3.7.5",
    "node-schedule": "^2.1.1",
    "react": "^18.2.0",
    "react-autosuggest": "^10.1.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.10.1",
    "react-open-weather": "^1.3.2",
    "react-redux": "^8.1.1",
    "react-router": "^6.14.1",
    "react-router-dom": "^6.14.0",
    "react-scripts": "^5.0.1",
    "smalltalk": "^4.1.1",
    "uuid": "^9.0.0",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.7.4",
    "electron-builder": "^24.4.0",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1"
  }
}
